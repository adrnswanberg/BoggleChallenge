
@{
    ViewBag.Title = "Boggle Board";
}

<div class="row">
    <h2>Boggle Board</h2>
</div>

<div class="row">
    <h4>Enter the board below. Place one space between each character, and one new line between each row.</h4>
</div>


@using (Html.BeginForm("BoggleBoardChallenge", "Challenge", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="row">
        <label for="rows">Rows</label>
        <input type="text" class="form-control" name="rows" />
    </div>
    <div class="row">
        <label for="cols">Columns</label>
        <input type="text" class="form-control" name="cols" />
    </div>
    <div class="row">
        <label for="board">Board contents</label>
        <textarea name="board" class="form-control" cols="40" rows="5"></textarea>
    </div>
    <div class="row">
        <input type="submit" class="btn btn-default" value="Go" />
    </div>
}

@if (ViewBag.HasBoggle)
{
    <div class="row">
        <h3>Given board</h3>
    </div>
    <div class="row">
        <div class="well">
            <span style="white-space: pre-line">@ViewBag.Board</span>
        </div>
    </div>
    <div class="row">
        <h3>Words in board</h3>
    </div>
    <div class="row">
        <div class="well">
            @foreach (string word in ViewBag.WordList)
            {
                @word <br />
            }
        </div>
    </div>
}

@if (ViewBag.Error)
{
    <div class="row" style="padding-top:20px">
        <div class="well">
            There was an error while processing your input. Please double check the dimensions and content of the board.
        </div>
    </div>
}